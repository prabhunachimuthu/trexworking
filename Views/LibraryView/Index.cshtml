@using Microsoft.AspNetCore.Mvc
@using Microsoft.AspNetCore.Http
@model List<OneDirect.Models.Library>
@{

}

<section class="content-header">

    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Library</li>
    </ol>
</section>

<!-- Main content -->

<section class="content" style="padding-top: 40px;">



    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div class="col-md-12">
                        <div class="col-md-9">
                        </div>
                        <div class="col-md-3 pull-right">
                            @Html.ActionLink("Add", "AddEdit", "LibraryView", new { }, new { @class = "btn btn-warning btn-sm pull-right", @style = "" })
                        </div>
                    </div>

                </div>
                <!-- /.box-header -->

                <div class="box-body">
                    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap" style="overflow-x:scroll">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example1" class="table table-bordered table-striped dataTable" style="font-size:small" role="grid" aria-describedby="example1_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Time: activate to sort column descending" style="width: 182px;">Limb</th>
                                            @*<th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Pain Level: activate to sort column descending" style="width: 182px;">Side</th>*@
                                            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Angle: activate to sort column descending" style="width: 182px;">Exercise</th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Repeat Number: activate to sort column descending" style="width: 182px;">Url</th>
                                            <th aria-label="" style="width: 182px;"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Count > 0)
                                        {
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.Limb</td>
                                                    @*<td>@item.Side</td>*@
                                                    <td>@item.Exercise</td>
                                                    <td style="white-space: nowrap;"><a href="@item.Url" target="_blank">@item.Url</a></td>
                                                    <td style="white-space: nowrap;">
                                                        @Html.ActionLink("Edit", "AddEdit", "LibraryView", new { id = item.Id }, new { @class = "label label-primary" })
                                                        @Html.ActionLink("Delete", "Delete", "LibraryView", new { id = item.Id }, new { @class = "label label-primary", onclick = "return confirm('Are you sure you wish to delete? ');" })
                                                    </td>
                                                </tr>
                                            }
                                        }

                                    </tbody>

                                </table>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

</section>
<div>

</div>
<script src="~/plugins/jQuery/jquery-2.2.3.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#example1').DataTable({
            "stateSave": true,
            "stateDuration": -1,
            'aoColumnDefs': [{
                'bSortable': false,
                'aTargets': [-1] /* 1st one, start by the right */
            }],
        });
    });

</script>